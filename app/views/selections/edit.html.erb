<div  STYLE="position:absolute; TOP:100px; LEFT:200px; WIDTH:800px; HEIGHT:10px"  >

<h1>Editing Selection</h1>

<%= form_for(@selection) do |f| %>
  <% if @selection.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@selection.errors.count, "error") %> prohibited this selection from being saved:</h2>

      <ul>
      <% @selection.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group">
    <%= f.label :name, class: "sr-only"%><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="field" align="center">
    <%= f.label :begin %><br>
    <%= f.date_select :begin %>
  </div>
  <div class="field" align="center">
    <%= f.label :end %><br>
    <%= f.date_select :end %>
  </div>
  <div class="actions">
    <%= f.submit "editar", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%= link_to 'Show', @selection %> |
<%= link_to 'Back', selections_path %>
</div>