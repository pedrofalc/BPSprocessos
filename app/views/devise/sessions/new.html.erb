<div  STYLE="position:absolute; TOP:70px; LEFT:100px; WIDTH:1000px; HEIGHT:10px"  >

<h2 align="center">Login</h2>

 <h3 align="center">
<% flash.each do |key, value| %>
<%= value %>
<% end %>
</h3>



<%= form_for(resource, as: resource_name, url: session_path(resource_name),class: "form-signin") do |f| %>

  <div class="form-group">
    <%= f.label :email, class: "sr-only" %><br />
    <%= f.email_field :email, autofocus: true , class: "form-username form-control", placeholder: "Email"%>
  </div>
  <div class="field">
    <%= f.label :password,class: "sr-only" %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Senha" %>
   </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Log in",class: "btn btn-lg btn-primary btn-block"  %>
  </div>



<% end %>
<%= render "devise/shared/links" %>
</div>
